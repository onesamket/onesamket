generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// todo 

model User {
  id       String @id @default(cuid())
  name     String
  emial    String @unique
  password String
  role     Role   @default(VISITOR)
}

model Article {
  id         String   @id @default(uuid())
  title      String
  cover      String?
  content    String
  inviteLink String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  VISITOR
  OWNER
}
